{
  "compileOnSave": false,
  "compilerOptions": {
    "target": "ES2017",
    "module": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,

    "rootDir": ".",
    "declaration": true,
    "removeComments": true,
    "emitBOM": true,
    "forceConsistentCasingInFileNames": true,

    "strict": true,
    "skipLibCheck": true,
    "noImplicitAny": true,
    "noImplicitThis": true
  },
  "include": ["./src/**/*", "./tests/**/*"],
  "exclude": ["node_modules", "./dist/**/*"]
}
